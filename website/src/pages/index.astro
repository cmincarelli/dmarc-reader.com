---
import BaseLayout from '../layouts/BaseLayout.astro';
import {
  Lock,
  Zap,
  BarChart3,
  Moon,
  Search,
  Cog,
  Download,
  Github,
  ArrowRight,
  Shield
} from 'lucide-astro';
---

<BaseLayout
  title="DMARC Reader - Analyze Email Security Reports"
  description="A powerful desktop application for analyzing DMARC reports with actionable insights. Privacy-first, fast, and beautifully designed."
>
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-navy-950/80 border-b border-white/5">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <Shield class="w-7 h-7 text-electric-blue" strokeWidth={2} />
        <span class="font-bold text-lg tracking-tight">DMARC Reader</span>
      </div>

      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-slate-300 hover:text-white transition-colors text-sm font-medium">Features</a>
        <a href="#screenshots" class="text-slate-300 hover:text-white transition-colors text-sm font-medium">Screenshots</a>
        <a href="#download" class="text-slate-300 hover:text-white transition-colors text-sm font-medium">Download</a>
        <a
          href="https://github.com/cmincarelli/dmarc-reader"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-slate-300 hover:text-white transition-colors text-sm font-medium"
        >
          <Github class="w-4 h-4" />
          GitHub
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center relative overflow-hidden grid-pattern">
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-navy-950 via-blue-950/50 to-navy-950 pointer-events-none"></div>

    <!-- Glow effect -->
    <div class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-electric-blue/10 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 py-32 text-center">
      <!-- App Icon -->
      <div class="opacity-0-init animate-fade-in mb-8 inline-block">
        <div class="w-24 h-24 mx-auto bg-gradient-to-br from-electric-blue to-blue-600 rounded-2xl flex items-center justify-center shadow-2xl shadow-electric-blue/30">
          <Shield class="w-14 h-14 text-white" strokeWidth={2} />
        </div>
      </div>

      <!-- Headline -->
      <h1 class="opacity-0-init animate-fade-in-up delay-100 text-6xl md:text-7xl font-extrabold tracking-tight mb-6">
        Analyze DMARC Reports
        <br />
        <span class="bg-gradient-to-r from-electric-blue-light to-blue-400 bg-clip-text text-transparent">
          with Confidence
        </span>
      </h1>

      <!-- Subheadline -->
      <p class="opacity-0-init animate-fade-in-up delay-200 text-xl md:text-2xl text-slate-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        A powerful desktop app that makes email security simple.
        <br />
        <span class="text-slate-400">Privacy-first, fast, and beautifully designed.</span>
      </p>

      <!-- CTAs -->
      <div class="opacity-0-init animate-fade-in-up delay-300 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="https://github.com/cmincarelli/dmarc-reader/releases/latest/download/DMARC-Reader-universal.dmg"
          class="group inline-flex items-center gap-3 px-8 py-4 bg-electric-blue hover:bg-electric-blue-light text-white font-semibold rounded-xl transition-all duration-200 hover:scale-105 hover:shadow-2xl hover:shadow-electric-blue/30"
        >
          <Download class="w-5 h-5" />
          Download for macOS
          <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
        </a>

        <a
          href="https://github.com/cmincarelli/dmarc-reader"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 bg-white/5 hover:bg-white/10 text-white font-semibold rounded-xl border border-white/10 transition-all duration-200"
        >
          <Github class="w-5 h-5" />
          View on GitHub
        </a>
      </div>

      <!-- Version badge -->
      <p class="opacity-0-init animate-fade-in delay-400 mt-8 text-sm text-slate-500 font-mono">
        v0.1.0 • Universal Binary • macOS 10.15+
      </p>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-32 bg-gradient-to-b from-navy-950 to-navy-900 relative">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Section Header -->
      <div class="text-center mb-20">
        <h2 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
          Why DMARC Reader?
        </h2>
        <p class="text-xl text-slate-400 max-w-2xl mx-auto">
          Built for security professionals who demand power, privacy, and polish.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1: Privacy First -->
        <div class="group p-8 bg-gradient-to-br from-white/5 to-white/[0.02] rounded-2xl border border-white/10 hover:border-electric-blue/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-electric-blue/10">
          <div class="w-12 h-12 bg-electric-blue/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-electric-blue/20 transition-colors">
            <Lock class="w-6 h-6 text-electric-blue" strokeWidth={2} />
          </div>
          <h3 class="text-2xl font-bold mb-3">Privacy First</h3>
          <p class="text-slate-400 leading-relaxed">
            All data stays local on your machine. No cloud services, no data sharing, complete control.
          </p>
        </div>

        <!-- Feature 2: Lightning Fast -->
        <div class="group p-8 bg-gradient-to-br from-white/5 to-white/[0.02] rounded-2xl border border-white/10 hover:border-electric-blue/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-electric-blue/10">
          <div class="w-12 h-12 bg-electric-blue/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-electric-blue/20 transition-colors">
            <Zap class="w-6 h-6 text-electric-blue" strokeWidth={2} />
          </div>
          <h3 class="text-2xl font-bold mb-3">Lightning Fast</h3>
          <p class="text-slate-400 leading-relaxed">
            Built with Electron and SQLite for instant report processing and analysis.
          </p>
        </div>

        <!-- Feature 3: Visual Insights -->
        <div class="group p-8 bg-gradient-to-br from-white/5 to-white/[0.02] rounded-2xl border border-white/10 hover:border-electric-blue/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-electric-blue/10">
          <div class="w-12 h-12 bg-electric-blue/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-electric-blue/20 transition-colors">
            <BarChart3 class="w-6 h-6 text-electric-blue" strokeWidth={2} />
          </div>
          <h3 class="text-2xl font-bold mb-3">Visual Insights</h3>
          <p class="text-slate-400 leading-relaxed">
            Interactive charts, geographic maps, and health scores at a glance.
          </p>
        </div>

        <!-- Feature 4: Beautiful Interface -->
        <div class="group p-8 bg-gradient-to-br from-white/5 to-white/[0.02] rounded-2xl border border-white/10 hover:border-electric-blue/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-electric-blue/10">
          <div class="w-12 h-12 bg-electric-blue/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-electric-blue/20 transition-colors">
            <Moon class="w-6 h-6 text-electric-blue" strokeWidth={2} />
          </div>
          <h3 class="text-2xl font-bold mb-3">Beautiful Interface</h3>
          <p class="text-slate-400 leading-relaxed">
            Native dark mode support with a polished, modern design.
          </p>
        </div>

        <!-- Feature 5: Smart Detection -->
        <div class="group p-8 bg-gradient-to-br from-white/5 to-white/[0.02] rounded-2xl border border-white/10 hover:border-electric-blue/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-electric-blue/10">
          <div class="w-12 h-12 bg-electric-blue/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-electric-blue/20 transition-colors">
            <Search class="w-6 h-6 text-electric-blue" strokeWidth={2} />
          </div>
          <h3 class="text-2xl font-bold mb-3">Smart Detection</h3>
          <p class="text-slate-400 leading-relaxed">
            Automatic issue detection with severity analysis and remediation guidance.
          </p>
        </div>

        <!-- Feature 6: Auto Import -->
        <div class="group p-8 bg-gradient-to-br from-white/5 to-white/[0.02] rounded-2xl border border-white/10 hover:border-electric-blue/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-electric-blue/10">
          <div class="w-12 h-12 bg-electric-blue/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-electric-blue/20 transition-colors">
            <Cog class="w-6 h-6 text-electric-blue" strokeWidth={2} />
          </div>
          <h3 class="text-2xl font-bold mb-3">Auto Import</h3>
          <p class="text-slate-400 leading-relaxed">
            Watch folders and automatically import new reports as they arrive.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section id="screenshots" class="py-32 bg-navy-950 relative grid-pattern">
    <div class="absolute inset-0 bg-gradient-to-b from-navy-900/50 to-navy-950/50 pointer-events-none"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-6">
      <div class="text-center mb-20">
        <h2 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
          See It In Action
        </h2>
        <p class="text-xl text-slate-400">
